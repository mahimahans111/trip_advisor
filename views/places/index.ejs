<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1><b>Welcome To The Trip Advisor!</b></h1>
      <p>Some Exhilarating Tourist Places In Delhi that are worth visiting.</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/places/new">Wanna post about a new place? Click here!</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap">
    <% places.forEach(function(place){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%=place.image%>">
          <div class="caption">
            <h4><%= place.name %></h4>
          </div>
          <p>
            <a href="places/<%=place._id%>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
